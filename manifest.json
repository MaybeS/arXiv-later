{
    "manifest_version": 2,
    "name": "arXiv later",
    "description": "Read arXiv paper later!",
    "version": "0.1",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_page": "index.html",
    "browser_action": {
        "default_icon": "arxiv.png",
        "default_title": "arXiv"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "*://*.arxiv.org/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.arxiv.org/abs/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "style.css"
    ]
}